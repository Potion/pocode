ARCHS				= i386
ONLY_ACTIVE_ARCH	= YES
SDKROOT				= macosx
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
MACOSX_DEPLOYMENT_TARGET = 10.7
LIBRARY_SEARCH_PATHS= $(POTION)
OTHER_LDFLAGS		= $(LIBRARIES_CMD) $(FRAMEWORKS_CMD)
INFOPLIST_FILE		= platform/main.plist
PRODUCT_NAME		= $(TARGET_NAME)
ALWAYS_SEARCH_USER_PATHS = NO
HEADER_SEARCH_PATHS	= $(POTION)/include $(BOOST) $(FREEIMAGE) $(TINYXPATH) $(FREETYPE) $(UTF8) $(PUGIXML) $(JSON) $(LIBRARIES)
USER_HEADER_SEARCH_PATHS = $(POTION)

GCC_PREPROCESSOR_DEFINITIONS = $(inherited)
GCC_OPTIMIZATION_LEVEL = s
GCC_PRECOMPILE_PREFIX_HEADER = YES
GCC_PREFIX_HEADER	= platform/main.pch
GCC_WARN_CHECK_SWITCH_STATEMENTS = NO

CLANG_CXX_LANGUAGE_STANDARDS = c++0x
CLANG_CXX_LIBRARY = libc++

LIBRARIES			= /pocode/libraries
POTION				= $(LIBRARIES)/pocode
BOOST				= $(LIBRARIES)/Boost/boost_1_54_0
FREEIMAGE			= $(LIBRARIES)/FreeImage
TINYXPATH			= $(LIBRARIES)/TinyXPath
FREETYPE			= $(LIBRARIES)/FreeType
UTF8				= $(LIBRARIES)/utf8
PUGIXML				= $(LIBRARIES)/pugixml
JSON                = $(LIBRARIES)/jsoncpp/json
LIBRARIES_CMD		= -lpocode -lstdc++.6.0.9
FRAMEWORKS_CMD		= -framework Cocoa -framework ApplicationServices -framework OpenGL -framework CoreVideo -framework QTKit
